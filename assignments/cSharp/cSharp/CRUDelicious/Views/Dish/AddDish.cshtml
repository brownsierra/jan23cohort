@{
    ViewData["Title"] = "Add Dish";
}
@model Dish

<h1 class="crudheader">Add a new Dish!</h1>
<nav id="nav">
    <a href="/" id="adddishhome">Home</a>
    <h2>|</h2>
    <a href="adddish" id="adddishadddish">Add a Dish</a>
</nav>
<form action="AddDish" method= "post" id="adddishform">
    <div id="adddishleftdiv">
    <section class="forminput">
        <label asp-for="Chef">Chef's Name</label>
        <input asp-for="Chef">
        <span asp-validation-for="Chef"></span>
    </section>
        <section class="forminput">
        <label asp-for="Name">Name of Dish</label>
        <input asp-for="Name">
        <span asp-validation-for="Name"></span>
    </section>
    <section id="caloriesinput">
        <label asp-for="Calories"># of Calories</label>
        <input type="number" asp-for="Calories">
        <span asp-validation-for="Calories"></span>
    </section>
    </div>
    <div>
        <label asp-for="Tastiness"></label>
        <select asp-for="Tastiness" id=tastenum>
            <option value="1" class="tastenum">1</option>
            <option value="2" class="tastenum">2</option>
            <option value="3" class="tastenum">3</option>
            <option value="4" class="tastenum">4</option>
            <option value="5" class="tastenum">5</option>            
        </select>
    </div>
    <div>
        <section id="desinput">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description"></textarea>
        </section>
        <button id="adddishbutton">Add Dish</button>
    </div>
</form>